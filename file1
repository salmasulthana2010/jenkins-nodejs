// Jenkinsfile

pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/salmasulthana2010/jenkins-nodejs'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
    }
}
